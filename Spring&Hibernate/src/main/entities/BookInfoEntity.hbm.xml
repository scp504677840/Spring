<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="main.entities.BookInfoEntity" table="book_info" schema="lab">
        <id name="id">
            <column name="id" sql-type="bigint(20) unsigned"/>
            <generator class="native"/>
        </id>
        <property name="gmtCreate">
            <column name="gmt_create" sql-type="datetime"/>
        </property>
        <property name="gmtModified">
            <column name="gmt_modified" sql-type="datetime"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="price">
            <column name="price" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
    </class>
</hibernate-mapping>